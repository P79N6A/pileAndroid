<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/pileDetailRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/detailTV">

        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/mine_selector">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:padding="3dp"
                android:singleLine="true"
                android:text="电站"
                android:textColor="@color/font"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/textView3"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="3dp"
                android:singleLine="true"
                android:text="距离"
                android:textColor="#EE2C2C"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/linear2"
            android:background="@drawable/mine_selector">

            <ImageView
                android:id="@+id/button2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="16dp"
                android:background="@mipmap/dir1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="3dp"
                android:singleLine="true"
                android:text="总桩数"
                android:textColor="@color/font"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/textView4"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="3dp"
                android:singleLine="true"
                android:text="空桩数"
                android:textColor="@color/font"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/detailTV"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_toLeftOf="@+id/naviTV"
        android:gravity="center"
        android:src="@mipmap/icon_detail" />

    <ImageView
        android:id="@+id/naviTV"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:src="@mipmap/location" />


</RelativeLayout>