<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/darkgrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical" >
    
    <RelativeLayout
		android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/main">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="34dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/back"/>
        <TextView
			android:text="账户信息"       
			android:textColor="@color/white"     
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="18sp"/>
    </RelativeLayout>
    
    <LinearLayout
		android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="vertical"
        android:background="#efffdb"
		android:layout_below="@+id/linear1"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true">
		<LinearLayout
		    android:gravity="center_vertical"
		    android:layout_width="match_parent"
        	android:layout_height="28dp">
		    <TextView
		        android:layout_marginLeft="16dp"
		        android:text="当前账户余额："
		        android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"/>
		</LinearLayout>
		<TextView
			android:id="@+id/money"
			android:textSize="30sp"
			android:textColor="#FF3030"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="144dp"
			android:text="300.0元"/>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linear2"
        android:layout_marginTop="8dp"
        android:background="@drawable/mine_selector" >

        <ImageView
            android:id="@+id/star1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@mipmap/alipay" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/star1"
            android:gravity="center"
            android:text="支付宝充值"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_forward1" />

    </RelativeLayout>

	<View
		android:id="@+id/linear"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:layout_alignBottom="@+id/linear3"
		android:background="@color/darkgrey"
		/>

    <RelativeLayout
		android:id="@+id/linear4"
		android:background="@drawable/mine_selector"
		android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/star2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/weixin"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/star2"
            android:gravity="center"
            android:text="微信支付"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_forward1" />
    </RelativeLayout>
        
</RelativeLayout>
